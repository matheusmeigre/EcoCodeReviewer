{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    },
    {
      "src": "templates/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "env": {
    "GROQ_API_KEY": "@groq_api_key",
    "GROQ_MODEL": "llama-3.3-70b-versatile",
    "GROQ_TEMPERATURE": "0.3",
    "GROQ_MAX_TOKENS": "2000",
    "GROQ_TIMEOUT": "30"
  }
}
