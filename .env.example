# ========================================
# Eco-Code Reviewer v4.0 - Configuration
# ========================================

# Groq API Configuration (GRÁTIS!)
# Obtenha sua chave em: https://console.groq.com/keys
GROQ_API_KEY=gsk_your-api-key-here

# Model Selection (todos GRATUITOS no Groq)
# Opções recomendadas:
#   - llama-3.3-70b-versatile (MELHOR - balanceado)
#   - llama-3.1-70b-versatile (rápido e preciso)
#   - mixtral-8x7b-32768 (contexto longo)
#   - gemma2-9b-it (leve e rápido)
GROQ_MODEL=llama-3.3-70b-versatile

# Temperature for analysis (0.0 = deterministic, 1.0 = creative)
GROQ_TEMPERATURE=0.3

# Max tokens for response
GROQ_MAX_TOKENS=2000

# Request timeout (seconds)
GROQ_TIMEOUT=30

# Flask Configuration
FLASK_DEBUG=True
FLASK_PORT=5000
FLASK_HOST=0.0.0.0
